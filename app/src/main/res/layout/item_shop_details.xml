<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="all">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:background="?selectableItemBackground">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/dayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                tools:text="08"
                android:textColor="#232323"/>

            <TextView
                android:id="@+id/monthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ekim"
                android:textColor="#232323"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="#40000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="14dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrowImageView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_right_arrow" />

                <TextView
                    android:id="@+id/marketNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#232323"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/arrowImageView"
                    android:layout_marginRight="5dp"
                    tools:text="Market 1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#232323"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    tools:text="25 TL" />

                <TextView
                    android:id="@+id/orderNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#232323"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/priceTextView"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Şampuan 250 ml" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/orderStatusView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/orderstatus_error_background"/>

                <TextView
                    android:id="@+id/orderStatusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#232323"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Şampuan 250 ml"
                    tools:textColor="@color/errorTextColor"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/orderStatusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="#20000000"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp">

            <TextView
                android:id="@+id/priceTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#232323"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                tools:text="25 TL" />

            <TextView
                android:id="@+id/productDetailsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#232323"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/priceTextView2"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Şampuan 250 ml" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>